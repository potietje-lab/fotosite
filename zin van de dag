  function dagVanHetJaar() {
    const nu = new Date();
    const startVanJaar = new Date(nu.getFullYear(), 0, 0);
    const diff = nu - startVanJaar;
    const eenDag = 1000 * 60 * 60 * 24;
    return Math.floor(diff / eenDag);
  }

  const dagNummer = dagVanHetJaar();
  const index = dagNummer % spreuken.length;
  const vandaagSpreuk = spreuken[index];

  document.getElementById('spreuk').textContent = vandaagSpreuk;
</script>

